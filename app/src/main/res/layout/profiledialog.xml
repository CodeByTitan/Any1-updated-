<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/app_background"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="350dp"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/grayindark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView
            android:text="Stop creating account"
            android:fontFamily="@font/hnbold"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Are you sure you want to stop creating account?"
            android:fontFamily="@font/hnmed"
            android:textColor="@color/randomgrey"
            android:layout_marginTop="70dp"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_width="310dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="continue"
            android:id="@+id/continuee"
            android:fontFamily="@font/hnmed"
            android:textColor="@color/black"
            android:layout_marginTop="110dp"
            android:textSize="15sp"
            android:layout_marginStart="270dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Stop creating"
            android:id="@+id/stopcreating"
            android:fontFamily="@font/hnmed"
            android:textColor="@color/fblue"
            android:textSize="15sp"
            android:layout_marginTop="110dp"
            android:layout_marginStart="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>