<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/memberpfp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/gigachad"
        app:civ_border="false" />

    <TextView
        android:id="@+id/membername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/groupmenu"
        android:layout_toEndOf="@+id/memberpfp"
        android:ellipsize="end"
        android:fontFamily="@font/hnmed"
        android:maxWidth="140dp"
        android:maxLines="1"
        android:text="ArshSethilkfadkldmdskjdsk"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="110dp"
        android:text="Connect"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_marginEnd="10dp"
        android:id="@+id/groupmemberconnect"
        android:fontFamily="@font/hnmed"
        android:backgroundTint="@color/fblue"
        android:layout_alignParentEnd="true"
        android:layout_height="40dp"/>

    <ImageView
        android:layout_marginTop="31dp"
        android:src="@drawable/ic_dots"
        android:id="@+id/groupmenu"
        android:layout_marginEnd="10dp"
        android:rotation="90"
        android:layout_toStartOf="@+id/groupmemberconnect"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/memberusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/membername"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@+id/groupmenu"
        android:layout_toEndOf="@+id/memberpfp"
        android:ellipsize="end"
        android:fontFamily="@font/hnmed"
        android:maxWidth="130dp"
        android:maxLines="1"
        android:text="arsh.sethi"
        android:textColor="@color/grayasl" />
</RelativeLayout>