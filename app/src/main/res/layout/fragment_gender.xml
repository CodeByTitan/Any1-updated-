<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:theme="@style/Theme.Any1"
    tools:context=".feature_signup.presentation.Gender">

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gendernext"
        android:backgroundTint="@color/fblue"
        android:layout_marginTop="10dp"
        app:icon="@drawable/ic_arrowfwd"
        app:iconTint="@color/samewhite"
        app:iconGravity="end"
        android:layout_marginEnd="10dp"
        android:text="NEXT"
        android:textColor="@color/greywhite"
        android:textSize="15dp"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/hnmed"
        android:text="What is your gender?"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gendernext" />

    <CheckBox
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:button="@drawable/custom_checkbox"
        android:layoutDirection="rtl"
        android:text="Male"
        android:fontFamily="@font/hnmed"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:button="@drawable/custom_checkbox"
        android:layout_marginTop="15dp"
        android:layoutDirection="rtl"
        android:text="Female"
        android:id="@+id/female"
        android:textColor="@color/black"
        android:fontFamily="@font/hnmed"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/male" />

</androidx.constraintlayout.widget.ConstraintLayout>