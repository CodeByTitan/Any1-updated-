<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:src="@drawable/wojakgc"
        android:layout_width="50dp"
        android:layout_marginStart="10dp"
        app:civ_border="false"
        android:layout_marginTop="5dp"
        android:id="@+id/usersearchpic"
        android:layout_height="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/fblue"
            android:fontFamily="@font/hnmed"
            android:visibility="invisible"
            android:text="Connect"
            android:textAllCaps="false"
            android:textSize="13sp"
            app:cornerRadius="25dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:backgroundTint="@color/fblue"
            android:fontFamily="@font/hnmed"
            android:text="Connected"
            android:visibility="invisible"
            android:textColor="@color/grayasl"
            android:textSize="13sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/requested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:backgroundTint="@color/fblue"
            android:fontFamily="@font/hnmed"
            android:visibility="invisible"
            android:text="Requested"
            android:textColor="@color/fblue"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userdisplayname"
            android:layout_marginStart="15sp"
            android:layout_toLeftOf="@+id/connect"
            android:fontFamily="@font/hnmed"
            android:text="username"
            android:layout_alignParentStart="true"
            android:textColor="@color/grayasl"
            android:textSize="12sp" />

<!--        <TextView-->
<!--            android:id="@+id/mutualconnections"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_marginStart="15sp"-->
<!--            android:layout_marginBottom="2dp"-->
<!--            android:fontFamily="@font/hnmed"-->
<!--            android:text="5 mututal connections"-->
<!--            android:textColor="@color/grayasl"-->
<!--            android:textSize="12sp" />-->

        <TextView
            android:id="@+id/userdisplayname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/connect"
            android:ellipsize="end"
            android:fontFamily="@font/hnmed"
            android:maxWidth="300dp"
            android:maxLines="1"
            android:text="Titan King"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>