<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:backgroundTint="@color/app_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/removeaccounttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/hnbold"
            android:maxWidth="200dp"
            android:text="This email is already signed up"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/removeaccountinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/removeaccounttext"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/hnmed"
            android:maxLines="4"
            android:text="You can either log into the existing account or continue with another email"
            android:textAlignment="center"
            android:textColor="@color/randomgrey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/createnewaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/hnmed"
            android:gravity="center"
            android:text="Use another account"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/logintoexistingaccount"
            android:layout_marginTop="10dp"
            android:background="@color/dividergrey" />

        <TextView
            android:id="@+id/logintoexistingaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/hnmed"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Log into existing account"
            android:textColor="@color/fblue"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/removeaccountinfo"
            android:layout_marginTop="10dp"
            android:background="@color/dividergrey" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
